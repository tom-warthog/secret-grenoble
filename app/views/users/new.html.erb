<div class="container">
  <h1>Add a new user</h1>

  <%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :Email %>:<br>
    <%= f.text_field :email, placeholder: 'sergio@gmail.com', class: 'form-control w-25' %><br>
  </div>
  <div class="form-group">
    <%= f.label :Password %>:<br>
    <%= f.text_field :password_digest, placeholder: '*********', class: 'form-control w-25' %><br>
  </div>
  <%= f.submit class: "btn btn-primary"%>
  <% end %>
</div>
